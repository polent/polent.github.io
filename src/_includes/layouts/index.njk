{% extends "layouts/base.njk" %} 

{% set title = meta.projectName %}

{% block content %}
  <section class="wrapper layout-grid">
    <h1 class="page-header layout-span">{{ title }}</h1>
    <div class="layout-span layout-span--main | content-main flow">
      {{ content | safe }}
    </div>
    <div class="layout-span layout-span--aside">
      <aside class="content-aside flow">
        <h2>Latest recipes</h2>
        <ul class="recipe-ul">
          {% for item in collections.latest %}
            <li>
              <a href="{{ item.url }}">
                  {% figure %}
                      {% picture item.data.figureRecipe.imageSrc, item.data.figureRecipe.imageTitle, item.data.figureRecipe.imageAlt, item.data.figureRecipe.loading, "(min-width: 60rem) 260px, 340px" %}
                  {% endfigure %}
                  {{ item.data.title }}
              </a>
              <time datetime="{{ item.date | dateToYYYYMMDD }}"> {{ item.date | dateToDMY }}</time>
          </li>
          {% endfor %}
        </ul>
      </aside>
    </div>
  </section>
{% endblock %}